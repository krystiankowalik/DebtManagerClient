<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_item_adapter"
        tools:text="Payable" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/type"
        android:gravity="end"
        android:padding="@dimen/margin_item_adapter"
        android:textColor="@color/colorAccent"
        tools:text="123.432 USD" />


    <TextView
        android:id="@+id/me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/type"
        android:paddingStart="@dimen/margin_item_adapter"
        android:text="@string/me"
        android:textStyle="bold"
        tools:text="Me" />

    <TextView
        android:id="@+id/direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/type"
        android:paddingStart="2sp"
        android:paddingEnd="2sp"
        android:layout_toEndOf="@id/me"
        android:textStyle="bold"
        tools:text="->" />

    <TextView
        android:id="@+id/another_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/type"
        android:layout_toEndOf="@id/direction"
        android:textStyle="bold"
        tools:text="Another guy" />


</RelativeLayout>